{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": "off",
    "no-multi-spaces": "off",
    "require-jsdoc": "off",
    "max-len": [
      "error",
      {
        // Disable line length maximum for imports and long URLs.
        "ignorePatterns": [
          "^import .*",
          "'https?.*"
        ]
      }
    ]
  }
}
